<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="180dp"
    tools:context=".ChangeEmotyActivity"
    android:background="#FFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#F29661">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="What your Emoty?"
            android:fontFamily="@font/sungsil"
            android:textSize="17dp"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageButton
            android:layout_margin="10dp"
            android:id="@+id/happyEmoty"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/smilemoty"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/sadEmoty"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sademoty"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>


        <ImageButton
            android:id="@+id/angryEmoty"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:src="@drawable/angryemoty"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>


        <ImageButton
            android:id="@+id/emoty"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/emoty"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>