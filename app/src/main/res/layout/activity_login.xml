<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="350dp"
    tools:context=".LoginActivity"
    android:background="#FFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F29661">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sungsil"
            android:textColor="#000000"
            android:text="Dairy.exe"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/closeBTN"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="310dp"
        android:background="#00ff0000"
        android:src="@drawable/cancel"
        android:scaleType="fitCenter"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sungsil"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000000"
        android:text="로그인"/>

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@drawable/blackline"
        android:hint="ID"
        android:textColor="#000000"
        android:fontFamily="@font/sungsil"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#000000"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@drawable/blackline"
        android:hint="Password"
        android:fontFamily="@font/sungsil"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>

        <ImageButton
            android:id="@+id/pwshow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/glasses"
            android:scaleType="fitCenter"
            android:background="#00ff0000"
            android:layout_gravity="center"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="8dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

    <CheckBox
        android:id="@+id/auto_Login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="자동 로그인"
            android:textColor="#000"
            android:fontFamily="@font/sungsil"
            android:textSize="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/loginBTN"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#000000"
        android:fontFamily="@font/sungsil"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:text="로그인"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/findPW"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#00ff0000"
        android:fontFamily="@font/sungsil"
        android:textColor="#CC3D3D"
        android:textSize="15dp"
        android:text="비밀번호를 잊어버리셨나요?"
        android:layout_gravity="center"/>

</LinearLayout>